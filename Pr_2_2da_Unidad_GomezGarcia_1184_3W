print("Longitud de la última palabra: " + str(longitud_ultima_palabra()))
print("Mayor de tres números: " + str(mayor()))
print("Suma de la lista: " + str(suma()))
print("Multiplicación de la lista: " + str(multip()))
print("¿Es vocal?: " + str(es_vocal()))
print("Distancia dirigida: " + str(distancia_dirigida()))